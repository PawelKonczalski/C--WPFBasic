<Window x:Class="StackPanelAndWrapPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackPanelAndWrapPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <WrapPanel Orientation="Horizontal" Width="400" Background="Gold">
        <Button VerticalAlignment="Top" Width="300">1</Button>
        <Button VerticalAlignment="Center" Width="250">2</Button>
        <Button VerticalAlignment="Bottom" Width="120">3</Button>
    </WrapPanel>
</Window>
